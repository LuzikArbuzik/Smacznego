<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jsonstatham.luzikarbuzik.MainActivity"
    android:background="@drawable/pizza">

    <TextView
        android:id="@+id/login_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/login_info"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:text="Zaloguj siÄ™ "
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="350dp"/>

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/login_info">

        <EditText
            android:id="@+id/login_text"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:inputType="text"
            android:textColor="@color/white"
            android:hint="@string/login_restaurant_hint"
            android:background="@drawable/edit_text_style"
            android:gravity="center"

            android:textColorHint="@color/white"

            />

        <EditText
            android:id="@+id/password_text"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:hint="@string/password_restaurant_hint"
            android:background="@drawable/edit_text_style"
            android:gravity="center"
            android:textColorHint="@color/white"
            android:inputType="textPassword"
            android:layout_toRightOf="@+id/login_text"
            android:layout_marginRight="20dp"
            />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/restaurant"
            android:id="@+id/restaurant"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:onClick="loginRestaurant"
            />

    </RelativeLayout>

</RelativeLayout>
