<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restaurant_info"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        >

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/login_as"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:id="@+id/login_as"
            android:gravity="right"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Pizza Station Grabiszyńska"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:id="@+id/name"
            android:layout_below="@+id/login_as"
            android:layout_marginTop="10dp"
            android:gravity="right"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/address"
            android:layout_below="@+id/name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Grabiszyńska 66E, 53-441 Wrocław"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="right"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_info"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_order"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:id="@+id/add_order"
            />

        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/food_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_order"
            />

    </RelativeLayout>

</RelativeLayout>